            app:argType="string" />
    </fragment>-->
    <fragment
        android:id="@+id/product_detail_fragment"
        android:name="com.example.onlinemarket.fragment.ProductDetailFragment"
        android:label="ProductDetailFragment">
        <argument
            android:name="productPage"
            app:argType="android.net.Uri" />
    </fragment>


</navigation>