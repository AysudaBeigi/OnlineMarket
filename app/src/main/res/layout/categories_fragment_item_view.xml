<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="225dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    app:cardBackgroundColor="@color/white_ff"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="3dp"

        android:layout_margin="5dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/fragment_categories_image_view"
            android:layout_width="match_parent"
            tools:src="@drawable/ic_placeholder_recycler"
            android:src="@drawable/ic_placeholder_recycler"
            android:layout_height="160dp" />

        <TextView
            android:id="@+id/fragment_categories_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:maxEms="24"
            android:maxLines="2"
            android:fontFamily="@font/iran_yekan"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:layout_marginEnd="3dp"
            android:text="@string/product_name"
            android:textColor="@color/black"
            android:textSize="9sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>