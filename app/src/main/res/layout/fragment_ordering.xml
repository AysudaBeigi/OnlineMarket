<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sorts_radio_group"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مرتب سازی بر اساس  "
        android:fontFamily="@font/far_trafc_bd"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <RadioButton
        android:id="@+id/popularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/far_trafc_bd"
        android:text="@string/popularity"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/far_trafc_bd"
        android:text="@string/newest"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/high_to_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/far_trafc_bd"
        android:text="@string/high_to_low"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/low_to_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/far_trafc_bd"
        android:text="@string/low_to_high"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RadioGroup>