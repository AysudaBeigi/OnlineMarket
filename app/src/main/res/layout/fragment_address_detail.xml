<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:gravity="center"
    tools:context=".view.fragment.AddressDetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/card_view_address_name_address_detail">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/edit_text_address_name_address_detail"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="100dp"
           tools:text="نام آدرس"
           style="@style/PartialTextStyle"
           android:textDirection="rtl"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/card_view_address_name_address_detail">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/edit_text_complete_address_detail"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           style="@style/PartialTextStyle"
           android:textDirection="rtl"
           tools:text="آدرس کامل" />
    </com.google.android.material.card.MaterialCardView>

   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">
   <com.google.android.material.button.MaterialButton
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="ثبت آدرس"
       android:textColor="@color/white_ff"
       style="@style/PartialTextStyle"
       android:backgroundTint="@color/digikala_blue_gray"
       android:layout_marginBottom="32dp"
      />
   </com.google.android.material.card.MaterialCardView>



</RelativeLayout>