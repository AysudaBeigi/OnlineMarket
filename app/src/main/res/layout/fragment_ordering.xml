<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sorts_radio_group"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:padding="8dp"
    >

    <RadioButton
        android:id="@+id/popularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popularity"
        style="@style/PartialTextStyle"
        android:textSize="16sp"
        android:outlineSpotShadowColor="@color/red_22"
        />

    <RadioButton
        android:id="@+id/latest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newest"
        style="@style/PartialTextStyle"
        android:textSize="16sp"
        />

    <RadioButton
        android:id="@+id/high_to_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/high_to_low"
        android:textSize="16sp"
        style="@style/PartialTextStyle"
        />

    <RadioButton
        android:id="@+id/low_to_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/low_to_high"
        android:textSize="16sp"
        style="@style/PartialTextStyle"
        />

</RadioGroup>