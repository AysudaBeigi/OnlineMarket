<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/scroll_view_address_name_address_item"
        android:layout_toLeftOf="@+id/radio_button_select_address_item_view">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_address_information_item_view"
            style="@style/PartialTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            tools:text="مشخصات آدرس " />
    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_view_address_name_address_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/radio_button_select_address_item_view">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_address_name_item_view"
            style="@style/PartialTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            tools:text="نام آدرس " />
    </ScrollView>


    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/radio_button_select_address_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp" />

</RelativeLayout>