<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp">


    <TextView
        android:id="@+id/product_category_holder_name"
        style="@style/GeneralTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/product_category_holder_image"
        android:gravity="right"
        android:lines="3"
        android:text="@string/product_name" />


    <TextView
        android:id="@+id/product_category_holder_price"
        style="@style/GeneralTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/product_category_holder_image"
        android:gravity="left"
        android:text="@string/product_price"
        android:textColor="@color/red_22" />


    <ImageView
        android:id="@+id/product_category_holder_image"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_placeholder_recycler"
        tools:src="@drawable/ic_placeholder_recycler" />


    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        android:outlineAmbientShadowColor="#DDDDDD"
        android:outlineSpotShadowColor="#DDDDDD" />

</RelativeLayout>
